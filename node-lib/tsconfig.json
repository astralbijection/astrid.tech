{
  "compilerOptions": {
    "noImplicitAny": true,
    "outDir": "dist",
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "downlevelIteration": true,
    "target": "es5",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
  },
  "include": ["src"],
  "exclude": ["src/**.test.*"],
}